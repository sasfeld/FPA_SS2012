<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.bht.fpa.mail.s778455.imapnavigation.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.bht.fpa.mail.s778455.imapnavigation.Perspective"
            id="de.bht.fpa.mail.s778455.imapnavigation.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="de.bht.fpa.mail.s778455.imapnavigation"
            class="de.bht.fpa.mail.s778455.imapnavigation.views.IMAPView"
            id="de.bht.fpa.mail.s778455.imapnavigation.views.SampleView"
            name="IMAP Navigation">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.bht.fpa.mail.s778455.main.perspective">
         <view
               id="de.bht.fpa.mail.s778455.imapnavigation.views.SampleView"
               ratio="0.5"
               relationship="stack"
               relative="de.bht.fpa.mail.s778455.main.perspective.left">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s778455.imapnavigation.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s778455.imapnavigation.commands.category"
            id="de.bht.fpa.mail.s778455.imapnavigation.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s778455.imapnavigation.handlers.IMAPSynchHandler"
            commandId="de.bht.fpa.mail.s778455.imapnavigation.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?">
         <menu
               id="de.bht.fpa.mail.s778455.imapnavigation.menus.sampleMenu"
               label="IMAPNavigation"
               mnemonic="M">
            <command
                  commandId="de.bht.fpa.mail.s778455.imapnavigation.commands.sampleCommand"
                  id="de.bht.fpa.mail.s778455.imapnavigation.menus.sampleCommand"
                  label="Synchronize"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s778455.imapnavigation.toolbars.sampleToolbar">
            <command
                  commandId="de.bht.fpa.mail.s778455.imapnavigation.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s778455.imapnavigation.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
