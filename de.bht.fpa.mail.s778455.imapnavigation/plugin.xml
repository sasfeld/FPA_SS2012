<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.bht.fpa.mail.s778455.imapnavigation.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.bht.fpa.mail.s778455.imapnavigation.Perspective"
            id="de.bht.fpa.mail.s778455.imapnavigation.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="de.bht.fpa.mail.s778455.imapnavigation"
            class="de.bht.fpa.mail.s778455.imapnavigation.views.IMAPView"
            id="de.bht.fpa.mail.s778455.imapnavigation.views.SampleView"
            name="IMAP Navigation">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.bht.fpa.mail.s778455.main.perspective">
         <view
               id="de.bht.fpa.mail.s778455.imapnavigation.views.SampleView"
               ratio="0.5"
               relationship="stack"
               relative="de.bht.fpa.mail.s778455.main.perspective.left">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
